<!DOCTYPE html>
<html>
<head>
  <title>Subzie</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", 'application' %>
  <%= csrf_meta_tags %>
  <%= tag :meta, name: 'stripe-key', content: 'pk_test_Ne92TuvoJOgAm9ZkZ27VOY9U' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<% if current_user && params[:action] != 'new_teams' && params[:action] != 'payment_info' %>
    <%= render partial: 'layouts/feedback_modal' %>
    <%= render partial: 'layouts/settings_modal' %>
    <%= render partial: 'layouts/sub_modal' %>
    <%= render partial: 'layouts/details_modal' %>
	<% end %>
  <%= render partial: 'layouts/header' %>
  <div class='application-container'>
    <div class='content'>
      <% flash.each do |type, message| %>
        <div class="flash-<%= type %>">
          <span><%= message %></span>
        </div>
      <% end %>
	    <%= yield %>
    </div>
  </div>
</body>
</html>
