<div class='added-leagues'>
	<% if @player.teams.present? %>
	  <% @player.teams.each do |team| %>
		  <div class='team-list-item'>
		  	<div class='team-list-logo'>
		  		<div class='team-logo'>
		    		<span class='team-initials'><%= team.name[0].capitalize %></span>
		    	</div>
		    </div>
		    <div class='team-list-name'>
		    	<span class='team-name'><%= team.name %></span>
		    </div>
		    <div class='team-list-delete'>
			    <%= link_to player_destroy_team_path(current_user, team), remote: true, method: :delete, class: 'team-delete' do %>
			    	<i class="fa fa-times"></i>
			    <% end %>
		    </div>
		  </div> 
	  <% end %>
	<% end %>
</div>

<div class='add-league-container'>
	<h4>Add a Team</h4>
	<div class='team-fields' id='player_teams'>
		<%= form_tag player_create_teams_path(current_user), id: 'player-teams-form', remote: true do %>
			<%= render partial: 'players/player_team_fields' %>
			<div class='submit-container'>
				<%= submit_tag 'ADD TEAM', class: 'btn-submit disabled', id: 'add-team-button' %>
			</div>
		<% end %>
	</div>
</div>