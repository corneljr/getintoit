<h1>Choose a new password</h1>
<%= form_for @player, :url => password_reset_path(@token), :html => {:method => :put} do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= @player.email %>
  </div>
  <div class="field">
    <%= f.label :password, class: 'full-width-input-label' %><br />
    <%= f.password_field :password, class: 'full-width-input' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
